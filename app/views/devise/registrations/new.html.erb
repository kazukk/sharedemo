<h2 class= "text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class= "container" >


  <div class="form-group">
    <%= f.text_field :name, autofocus: true, label: false, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: false, label: false, placeholder: "Email", class: "form-control" %>
  </div>



  <div class="form-group">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", label: false, placeholder: "Password", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", label: false, placeholder: "Passfowrd confirmation", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
